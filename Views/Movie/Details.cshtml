
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre : @Model.Genre.Name</li>
    <li>Date Added : @Model.DateAdded.ToString("d MMM yyyy")</li>
    <li>Release Date : @Model.ReleaseDate.ToString("d MMM yyyy")</li>
    <li>NumberInStock : @Model.NumberInStock</li>
</ul>



